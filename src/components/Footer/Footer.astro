---
import type footerMenuType from '../../types/footer';
import FooterMenu from './FooterMenu.astro';

interface Props {
    site: string;
    year: number;
    footerMenu: footerMenuType[];
}

const { site, year, footerMenu } = Astro.props;
---

<footer class="flex flex-col w-full max-w-[1472px] mx-auto px-4 md:px-10 mb-20">
    <div class="flex justify-between border-t py-4 border-black items-end">
        <h4 class="editor-bold text-2xl">Contact</h4>
        <div id="back-top" class="flex flex-col gt-america-light items-end text-[14px] cursor-pointer">
            <span>↑</span>
            <p>Back to top</p>
        </div>
    </div>
    <FooterMenu footerMenu={footerMenu} />
    </div>
    <div class="flex flex-col border-y py-4 border-black gt-america-light text-[14px]">
        <p>{site} &copy; {year} - All rights reserved</p>
        <p>Develop by Daniele Benedetto with Astro, TailwindCSS and ❤️</p>
    </div>
</footer>

<script>
	addEventListener('DOMContentLoaded', () => {
		const backTop = document.getElementById('back-top');
		if(!backTop) return;

		backTop.addEventListener('click', () => {
			window.scrollTo({
				top: 0,
				behavior: 'smooth'
			});
		});
	});
</script>