<button id="button-hamburger" class="w-[37px] h-5 flex items-center justify-center relative">
    <span class="w-full h-0.5 bg-black absolute opacity-100 top-0 right-0 transition-opacity duration-500"></span>
    <span class="w-3/4 h-0.5 bg-black absolute top-1/2 right-0 transition-transform duration-500"></span>
    <span class="w-3/4 h-0.5 bg-black absolute top-1/2 right-0 transition-transform duration-500"></span>
    <span class="w-full h-0.5 bg-black absolute opacity-100 top-full -right-0 transition-opacity duration-500"></span>
</button>

<script>
    const button = document.getElementById('button-hamburger');
    
    if(button) {
        button.addEventListener('click', () => {
            button.classList.toggle('active');
        });
    }
</script>

<style>
    #button-hamburger.active span:nth-child(1),
    #button-hamburger.active span:nth-child(4){
        opacity: 0;
    }
    #button-hamburger.active span:nth-child(2) {       
        transform: rotate(45deg);
        top: 50%;
    }
    #button-hamburger.active span:nth-child(3) {
        transform: rotate(-45deg);
        top: 50%;
    }
</style>