---
import type IssueType from '../../types/issue';
import Issue from './Issue.astro';

interface Props {
    issues: IssueType[];
}

const { issues } = Astro.props;
---

<div id="issues-dropdown" class="absolute left-0 top-full flex-col hidden max-h-[calc(100vh-115px)] overflow-y-auto border-t border-black z-40 bg">
    {issues.map((issue) => (
        <Issue title={issue.title} />
    ))} 
</div>